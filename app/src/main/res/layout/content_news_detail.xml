<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_news_detail"
        tools:context="edu.udacity.android.contentfinder.NewsDetailActivity">

    <TextView
            android:id="@+id/news_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_detail_title_textSize"
            android:layout_marginBottom="@dimen/news_detail_title_marginBottom"
            android:textStyle="bold"
            android:textColor="@color/news_detail_title_textColor"/>

    <TextView
            android:id="@+id/news_detail_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_detail_source_textSize"
            android:textStyle="italic"
            android:textColor="@color/news_detail_source_textColor"
            android:layout_below="@+id/news_detail_title"/>

    <TextView
            android:id="@+id/news_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_detail_description_textSize"
            android:layout_marginBottom="@dimen/news_detail_description_marginBottom"
            android:maxLines="100"
            android:layout_below="@+id/news_detail_source"/>
    
    <TextView
            android:id="@+id/news_detail_web_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_detail_link_textSize"
            android:textStyle="italic"
            android:textColor="@color/news_detail_link_textColor"
            android:layout_below="@+id/news_detail_description"/>

    <Button
            android:id="@+id/favorite_button"
            android:text="@string/favorite_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_detail_web_url"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/favorite_button_marginTop"/>

    <include layout="@layout/ad_view"/>

</RelativeLayout>
