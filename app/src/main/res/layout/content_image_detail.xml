<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_image_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/detail_scrollView_padding"
        tools:context="edu.udacity.android.contentfinder.ImageDetailActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/image_detail_binary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="@dimen/imageDetail_binary_marginBottom"/>

        <TextView
                android:id="@+id/image_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_detail_binary"
                android:textSize="@dimen/imageDetail_title_textSize"
                android:layout_marginBottom="@dimen/imageDetail_title_marginBottom"
                android:textStyle="bold"
                android:textColor="@color/imageDetail_title_textColor"/>

        <TextView
                android:id="@+id/image_detail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_detail_title"
                android:textSize="@dimen/source_textSize"
                android:textStyle="italic"
                android:textColor="@color/source_textColor"/>

        <Button
                android:id="@+id/favorite_button"
                android:text="@string/favorite_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_detail_source"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/imageDetail_marginTop"/>

        <include
                layout="@layout/ad_view"
                android:layout_below="@id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
