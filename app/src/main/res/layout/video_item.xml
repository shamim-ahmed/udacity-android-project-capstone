<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/video_item_thumbnail"
            android:layout_width="@dimen/mediaItem_thumbnail_width"
            android:layout_height="@dimen/mediaItem_thumbnail_height"
            android:layout_marginRight="@dimen/mediaItem_thumbnail_marginEnd"
            android:layout_marginEnd="@dimen/mediaItem_thumbnail_marginEnd"
            android:layout_marginTop="@dimen/mediaItem_thumbnail_marginTop"
            android:layout_marginBottom="@dimen/mediaItem_thumbnail_marginBottom"
            android:layout_weight="1"
            android:contentDescription="@string/videoList_thumbnail_contentDescription"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:id="@+id/video_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mediaItem_title_textSize"
                android:layout_margin="@dimen/mediaItem_layout_margin"
                android:textStyle="bold"
                android:textColor="@color/videoItem_textColor"
                android:maxLines="2"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/video_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mediaItem_description_textSize"
                android:layout_margin="@dimen/mediaItem_layout_margin"
                android:maxLines="3"
                android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>