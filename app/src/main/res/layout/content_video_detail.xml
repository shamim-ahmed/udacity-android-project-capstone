<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_video_detail"
        tools:context=".YouTubeVideoDetailActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/video_detail_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/videoDetail_preview_contentDescription"/>

        <TextView
                android:id="@+id/video_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_detail_image"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/videoDetail_margin_bottom"
                android:textStyle="bold"
                android:textColor="@color/videoDetail_textColor"/>

        <TextView
                android:id="@+id/video_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_detail_title"
                android:textSize="@dimen/videoDetail_description_textSize"
                android:layout_marginBottom="@dimen/videoDetail_description_marginBottom"/>

        <TextView
                android:id="@+id/video_detail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_detail_description"
                android:textSize="@dimen/source_textSize"
                android:textStyle="italic"
                android:textColor="@color/source_textColor"/>

        <Button
                android:id="@+id/favorite_button"
                android:text="@string/favorite_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_detail_source"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/favoriteButton_marginTop"/>

        <include layout="@layout/ad_view"/>
    </RelativeLayout>

</RelativeLayout>
