<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_keyword"
        tools:context="edu.udacity.android.contentfinder.AddKeywordActivity">

    <LinearLayout
            android:id="@+id/keyword_input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyword"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"/>

        <EditText
                android:id="@+id/new_keyword"
                android:layout_width="200dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@drawable/edittext_bg"/>
    </LinearLayout>

    <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Keyword"
            android:layout_below="@id/keyword_input_fields"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
