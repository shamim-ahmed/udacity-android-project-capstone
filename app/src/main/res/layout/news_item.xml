<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/news_item_paddingTop"
              android:paddingBottom="@dimen/news_item_paddingBottom">

    <TextView
            android:id="@+id/news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mediaItem_title_textSize"
            android:layout_marginBottom="@dimen/news_item_title_marginBottom"
            android:textStyle="bold"
            android:textColor="@color/newsItem_title_textColor"/>

    <TextView
            android:id="@+id/news_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mediaItem_description_textSize"
            android:layout_marginBottom="@dimen/news_item_summary_marginBottom"
            android:maxLines="4"
            android:ellipsize="end"/>

    <TextView
            android:id="@+id/news_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/source_textSize"
            android:textStyle="italic"
            android:textColor="@color/newsItem_summary_source_textColor"/>

</LinearLayout>